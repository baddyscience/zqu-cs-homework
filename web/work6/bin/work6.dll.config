<configuration>
	<system.web>
		<authentication mode="Forms">
			<forms loginUrl="~/Login.aspx" timeout="30"/>
		</authentication>
		<authorization>
			<deny users="?"/>
			<!-- 禁止匿名用户 -->
		</authorization>
	</system.web>

	<!-- 允许匿名访问登录页 -->
	<location path="Login.aspx">
		<system.web>
			<authorization>
				<allow users="*"/>
			</authorization>
		</system.web>
	</location>
</configuration>